

using System;
class Program
{
    static void Main()
    {
        Console.Write("Enter the number of rows: ");
        int rows = Convert.ToInt32(Console.ReadLine());

        for (int i = 1; i <= rows; i++)
        {
            Console.WriteLine(new string(' ', rows - i) + new string('*', 2 * i - 1));
        }
        for (int i = rows - 1; i >= 1; i--)
        {
            Console.WriteLine(new string(' ', rows - i) + new string('*', 2 * i - 1));
        }
    }
}
