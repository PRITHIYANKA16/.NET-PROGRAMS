44. Find Sum of Series (1 + 1/2 + 1/3...)

using System;
class Program
{
    static void Main()
    {
        Console.Write("Enter number of terms: ");
        int n = Convert.ToInt32(Console.ReadLine());
        double sum = 0;

        for (int i = 1; i <= n; i++)
        {
            sum += 1.0 / i;
        }

        Console.WriteLine($"Sum of series: {sum}");
    }
}


