40. Convert Kilometers to Miles

using System;
class Program
{
    static void Main()
    {
        Console.Write("Enter distance in kilometers: ");
        double km = Convert.ToDouble(Console.ReadLine());

        double miles = km * 0.621371;
        Console.WriteLine($"Distance in miles: {miles}");
    }
}


